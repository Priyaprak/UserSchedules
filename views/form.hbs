<h1 class="text-center mb-3">{{title}}</h1>
    <div>
        <form id="form" action="/new" method="POST" >
            
            <div class="form-group">
                <label for="username" class="control-label col-sm-2"> UserName <sup>*</sup></label>
                <input type="text" id="username" name="username" class="form-control" title="must be alphabets only" placeholder="Your name.." required pattern="^[a-zA-Z][a-zA-Z ]+[a-zA-Z]+$" oninvalid="InvalidMsg(this);" 
                  oninput="InvalidMsg(this);" > 
            </div>
            
            <div class="form-group">
                <label for="day" class="control-label col-sm-2"> Day </label>
                <select id="day" name="dayoftheweek" class="form-control" placeholder="Select the shift timings">
                    <option value="1">Monday</option>
                    <option value="2">Tuesday</option>
                    <option value="3">Wednesday</option>
                    <option value="4">Thursday</option>
                    <option value="5">Friday</option>
                    <option value="6">Saturday</option>
                    <option value="7">Sunday</option>
                </select>
            </div>
            <div>
                {{msg}}
            </div> 

           
